# Flask Application Settings
FLASK_ENV=development
FLASK_APP=src.web.app
FLASK_PORT=5000
FLASK_DEBUG=True

# Crawler Settings
MAX_WORKERS=4                    # Number of concurrent crawler threads
CRAWL_TIMEOUT=30                # Timeout for each request in seconds
MAX_PAGES_PER_DOMAIN=100        # Maximum pages to crawl per domain
RESPECT_ROBOTS_TXT=True         # Whether to check robots.txt
USER_AGENT="SearchEngine/1.0"   # Crawler user agent string

# Indexer Settings
INDEX_FILE=index.json           # Path to store the inverted index
AUTO_FLUSH=True                # Enable background auto-flush
FLUSH_INTERVAL=5               # Seconds between auto-flush operations
MAX_INDEX_SIZE=100000         # Maximum number of terms in index

# Storage Settings
STORAGE_DIR=data              # Directory for storing crawler data
BACKUP_ENABLED=True           # Enable index backups
BACKUP_INTERVAL=3600         # Backup interval in seconds

# Ranking Settings
MIN_TERM_FREQUENCY=2         # Minimum term frequency to include in index
MAX_RESULTS=100             # Maximum search results to return

# Debug Settings
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR, CRITICAL
PROFILE_ENABLED=False       # Enable performance profiling