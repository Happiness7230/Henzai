
# ===== Storage Configuration =====
# Path to the inverted index file
INDEX_PATH=data/index.json

# Path to the document metadata file
DOCUMENT_PATH=data/documents.json

# ===== Crawler Configuration =====
# Maximum number of concurrent crawler threads
MAX_WORKERS=5

# Delay between requests to the same domain (seconds)
DOMAIN_DELAY=1.0

# HTTP request timeout (seconds)
REQUEST_TIMEOUT=10

# Maximum pages to crawl per session
MAX_PAGES_DEFAULT=100

# User agent string for crawling
USER_AGENT=CustomSearchBot/1.0 (+http://example.com/bot)

# ===== Flask Configuration =====
# Flask environment (development or production)
FLASK_ENV=development

# Enable Flask debug mode (True or False)
FLASK_DEBUG=True

# Flask server host
FLASK_HOST=0.0.0.0

# Flask server port
FLASK_PORT=5000

# ===== Search Configuration =====
# Default number of search results per page
RESULTS_PER_PAGE=30

# Maximum results to return
MAX_RESULTS=1000

# ===== Index Configuration =====
# Auto-flush interval for index (seconds)
AUTO_FLUSH_INTERVAL=300

# Enable background auto-flush (True or False)
ENABLE_AUTO_FLUSH=True

# ===== Logging Configuration =====
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=

# ===== Optional: Redis Configuration (Phase 3) =====
# Redis host for caching
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Cache TTL in seconds
CACHE_TTL=3600

# Enable caching (True or False)
ENABLE_CACHE=False