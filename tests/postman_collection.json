            "name": "Search (GET)",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{base_url}}/api/search?q=python programming&max_results=10",
                "host": ["{{base_url}}"],
                "path": ["api", "search"],
                "query": [
                  {
                    "key": "q",
                    "value": "python programming"
                  },
                  {
                    "key": "max_results",
                    "value": "10"
                  }
                ]
              }
            }
          },
          {
            "name": "Search (POST)",
